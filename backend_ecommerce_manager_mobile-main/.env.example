# TikTok API Configuration
TIKTOK_APP_KEY=your_tiktok_app_key
TIKTOK_APP_SECRET=your_tiktok_app_secret
TIKTOK_REDIRECT_URI=http://localhost:5000/api/oauth/callback
# Comma/space-separated scopes as required by TikTok Shop (e.g. logistics,customer_service)
TIKTOK_SCOPES=
TIKTOK_API_URL=https://open-api.tiktokglobalshop.com

# Shopee API Configuration
SHOPEE_PARTNER_ID=your_partner_id
SHOPEE_PARTNER_KEY=your_partner_key
SHOPEE_REDIRECT_URI=http://localhost:5000/api/oauth/shopee/callback
# Use Sandbox for development/testing
SHOPEE_API_URL=https://openplatform.sandbox.test-stable.shopee.sg
# For production, use: https://partner.shopeemobile.com

# Server Configuration
PORT=5001
NODE_ENV=development
CLIENT_URL=http://localhost:3000
# Force HTTPS in production (set to true behind HTTPS proxy)
FORCE_HTTPS=false

# Database Configuration (PostgreSQL on VPS)
# ==================================================
# Untuk koneksi ke VPS 103.38.109.27:
# DB_HOST=103.38.109.27
# DB_NAME=ecommerce_manager
# DB_USERNAME=sparkcommerce
# DB_PASSWORD=YourSecurePassword123!
# DB_PORT=5432
# DB_DIALECT=postgres
# DB_SSL=false
# ==================================================
DB_HOST=localhost
DB_NAME=ecommerce_manager
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_PORT=5432
DB_DIALECT=postgres
DB_SSL=false

# Security
# 32-byte base64 (example only, generate your own with `openssl rand -base64 32`)
TOKEN_ENCRYPTION_KEY=your_base64_32byte_key

# Response payload encryption (optional)
# 32-byte base64 key (same key must be used by mobile client)
PAYLOAD_ENCRYPTION_KEY=your_base64_32byte_key
RESPONSE_ENCRYPTION_ENABLED=false
RESPONSE_ENCRYPTION_REQUIRED=false
